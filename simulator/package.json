{
  "name": "counter-drone-simulator",
  "version": "1.0.0",
  "description": "대드론 C2 시뮬레이터 서버",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "batch": "ts-node src/batch/experimentRunner.ts",
    "batch:quick": "ts-node src/batch/experimentRunner.ts 5 30",
    "batch:full": "ts-node src/batch/experimentRunner.ts 50 120"
  },
  "dependencies": {
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
